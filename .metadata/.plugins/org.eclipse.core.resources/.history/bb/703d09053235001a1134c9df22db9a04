	static void test3() {
		// Dessert
		Scanner sc3 = new Scanner(System.in);
		Desserts[] tab3 = Desserts.values();
		System.out.println("veuillez choisir votre dessert: ");
		for (Desserts d : tab3)
			System.out.println(d.name());
		String choixd = sc3.nextLine();

	}

	static void test1() {
